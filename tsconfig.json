	"compilerOptions": {
		"target": "ESNext",
		"module": "Preserve",
		"moduleResolution": "bundler",
		"jsx": "react",
		"noEmit": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ESNext"],
		"types": ["node", "luna"],
		"baseUrl": ".",
